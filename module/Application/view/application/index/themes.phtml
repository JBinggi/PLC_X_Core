use Application\Controller\CoreController; ?>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Installed Themes</h2>

            <ul class="list-group">
                <li class="list-group-item">
                    Default
                    <?=(CoreController::$oSession->oUser->getTheme() != 'default') ? '<a href="/user/settheme/default">Activate</a>' : ''?>
